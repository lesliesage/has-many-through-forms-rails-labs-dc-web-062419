<h1>Create a Post</h1>

<%= form_for @post do |f| %>
  <%= f.label "Title" %>
  <br>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label "Content" %>
  <br>
  <%= f.text_area :content %>
  <br>
  <br>
  <%= f.label "Categories" %>
  <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.label :name, "New category" %>
    <%= categories_fields.text_field :name %>
    <br>
    <br>
    <% end %>
  <%= f.submit %>
<% end %>
